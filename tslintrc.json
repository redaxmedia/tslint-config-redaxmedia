{
	"extends":
	[
		"tslint:recommended",
		"tslint-eslint-rules"
	],
	"rules":
	{
		"arrow-parens":
		{
			"severity": "off"
		},
		"one-line":
		{
			"severity": "off"
		},
		"brace-style":
		{
			"options":
			[
				"allman"
			]
		},
		"indent":
		{
			"options":
			[
				"tabs"
			]
		},
		"typedef-whitespace":
		[
			{
				"call-signature": "onespace",
				"index-signature": "onespace",
				"parameter": "onespace",
				"property-declaration": "onespace",
				"variable-declaration": "onespace"
			},
			{
				"call-signature": "onespace",
				"index-signature": "onespace",
				"parameter": "onespace",
				"property-declaration": "onespace",
				"variable-declaration": "onespace"
			}
		],
		"quotemark":
		{
			"options":
			[
				"single"
			]
		},
		"interface-name":
		{
			"options":
			[
				"never-prefix"
			]
		},
		"trailing-comma":
		{
			"options":
			[
				{
					"multiline": "never",
					"singleline": "never"
				}
			]
		}
	}
}
