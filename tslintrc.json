{
	"extends":
	[
		"tslint:recommended",
		"tslint-eslint-rules"
	],
	"rules":
	{
		"arrow-parens":
		{
			"severity": "off"
		},
		"brace-style":
		{
			"options":
			[
				"allman"
			]
		},
		"indent":
		{
			"options":
			[
				"tabs"
			]
		},
		"interface-name":
		{
			"options":
			[
				"never-prefix"
			]
		},
		"file-name-casing":
		{
			"options":
			[
				"kebab-case"
			]
		},
		"member-ordering":
		{
			"options":
			{
				"order": "instance-sandwich"
			}
		},
		"no-var-keyword":
		{
			"severity": "error"
		},
		"no-consecutive-blank-lines":
		{
			"severity": "error"
		},
		"one-line":
		{
			"severity": "off"
		},
		"quotemark":
		{
			"options":
			[
				"single"
			]
		},
		"ter-newline-after-var":
		{
			"severity": "error"
		},
		"trailing-comma":
		{
			"options":
			[
				{
					"multiline": "never",
					"singleline": "never"
				}
			]
		},
		"typedef":
		{
			"options":
			[
				"call-signature",
				"member-variable-declaration",
				"parameter",
				"property-declaration",
				"variable-declaration"
			]
		},
		"typedef-whitespace":
		[
			{
				"call-signature": "onespace",
				"index-signature": "onespace",
				"parameter": "onespace",
				"property-declaration": "onespace",
				"variable-declaration": "onespace"
			},
			{
				"call-signature": "onespace",
				"index-signature": "onespace",
				"parameter": "onespace",
				"property-declaration": "onespace",
				"variable-declaration": "onespace"
			}
		]
	}
}
